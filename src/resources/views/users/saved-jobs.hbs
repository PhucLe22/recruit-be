<script>
document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.saved-card');
    const filters = document.querySelectorAll('.saved-filter');
    const emptyFilter = document.getElementById('emptyFilter');
    const jobsList = document.getElementById('savedJobsList');
    const modal = document.getElementById('unsaveModal');
    const modalCancel = document.getElementById('modalCancel');
    const modalConfirm = document.getElementById('modalConfirm');
    let pendingJobId = null;
    let pendingCard = null;

    // Count stats
    let appliedCount = 0;
    let notAppliedCount = 0;
    cards.forEach(card => {
        if (card.dataset.applied === 'applied') appliedCount++;
        else notAppliedCount++;
    });

    const appliedEl = document.getElementById('appliedCount');
    const notAppliedEl = document.getElementById('notAppliedCount');
    if (appliedEl) appliedEl.textContent = appliedCount;
    if (notAppliedEl) notAppliedEl.textContent = notAppliedCount;

    // Filter functionality
    filters.forEach(btn => {
        btn.addEventListener('click', function() {
            const filter = this.dataset.filter;

            filters.forEach(f => f.classList.remove('active'));
            this.classList.add('active');

            let visibleCount = 0;
            cards.forEach(card => {
                if (card.classList.contains('removing')) return;
                if (filter === 'all' || card.dataset.applied === filter) {
                    card.style.display = '';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            if (emptyFilter && jobsList) {
                if (visibleCount === 0) {
                    emptyFilter.style.display = '';
                    jobsList.style.display = 'none';
                } else {
                    emptyFilter.style.display = 'none';
                    jobsList.style.display = '';
                }
            }
        });
    });

    // Unsave modal handling
    function openModal(jobId, card) {
        pendingJobId = jobId;
        pendingCard = card;
        modal.classList.add('active');
    }

    function closeModal() {
        modal.classList.remove('active');
        pendingJobId = null;
        pendingCard = null;
    }

    modalCancel.addEventListener('click', closeModal);
    modal.addEventListener('click', function(e) {
        if (e.target === modal) closeModal();
    });

    modalConfirm.addEventListener('click', async function() {
        if (!pendingJobId || !pendingCard) return;

        const jobId = pendingJobId;
        const card = pendingCard;
        closeModal();

        try {
            const response = await fetch(`/users/saved-jobs/${jobId}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
            });

            if (response.ok) {
                card.classList.add('removing');

                setTimeout(() => {
                    card.remove();

                    // Update total count
                    const totalBadge = document.querySelector('.saved-filter__count');
                    const remaining = document.querySelectorAll('.saved-card:not(.removing)');
                    if (totalBadge) {
                        totalBadge.textContent = remaining.length;
                    }

                    if (remaining.length === 0) {
                        location.reload();
                    }
                }, 400);
            } else {
                alert('Có lỗi xảy ra. Vui lòng thử lại.');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Có lỗi xảy ra. Vui lòng thử lại.');
        }
    });

    // Attach unsave buttons
    document.querySelectorAll('.unsave-btn').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            const jobId = this.dataset.jobId;
            const card = this.closest('.saved-card');
            openModal(jobId, card);
        });
    });
});
</script>
