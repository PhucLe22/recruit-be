<!-- Page Hero -->
<div class="saved-hero">
    <div class="container">
        <div class="saved-hero__content">
            <div class="saved-hero__text">
                <h1 class="saved-hero__title">
                    <i class="fas fa-heart"></i>
                    Công việc đã lưu
                </h1>
                <p class="saved-hero__subtitle">Quản lý danh sách công việc yêu thích của bạn</p>
            </div>
            <div class="saved-hero__stats">
                <div class="saved-stat">
                    <span class="saved-stat__number">{{totalJobs}}</span>
                    <span class="saved-stat__label">Đã lưu</span>
                </div>
                <div class="saved-stat">
                    <span class="saved-stat__number" id="appliedCount">0</span>
                    <span class="saved-stat__label">Đã ứng tuyển</span>
                </div>
                <div class="saved-stat">
                    <span class="saved-stat__number" id="notAppliedCount">0</span>
                    <span class="saved-stat__label">Chưa ứng tuyển</span>
                </div>
            </div>
        </div>
    </div>
</div>

{{#if savedJobs}}
<!-- Filter Tabs -->
<div class="container">
    <div class="saved-filters">
        <button class="saved-filter active" data-filter="all">
            <i class="fas fa-th-list"></i> Tất cả
            <span class="saved-filter__count">{{totalJobs}}</span>
        </button>
        <button class="saved-filter" data-filter="not-applied">
            <i class="fas fa-clock"></i> Chưa ứng tuyển
        </button>
        <button class="saved-filter" data-filter="applied">
            <i class="fas fa-check-circle"></i> Đã ứng tuyển
        </button>
    </div>
</div>

<!-- Job Cards -->
<div class="container">
    <div class="saved-list" id="savedJobsList">
        {{#each savedJobs}}
        <div class="saved-card" data-applied="{{#if isApplied}}applied{{else}}not-applied{{/if}}" data-job-id="{{jobId}}" data-aos="fade-up" data-aos-delay="{{@index}}00">
            <div class="saved-card__accent"></div>
            <div class="saved-card__body">
                <div class="saved-card__header">
                    <div class="saved-card__company-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="saved-card__info">
                        <h3 class="saved-card__title">
                            {{#unless isDeleted}}
                                <a href="/jobs/{{slug}}">{{jobTitle}}</a>
                            {{else}}
                                <span class="saved-card__deleted">{{jobTitle}}</span>
                            {{/unless}}
                        </h3>
                        <p class="saved-card__company">{{companyName}}</p>
                    </div>
                    <div class="saved-card__header-actions">
                        {{#if isApplied}}
                            <span class="saved-card__applied-badge">
                                <i class="fas fa-check"></i> Đã ứng tuyển
                            </span>
                        {{/if}}
                        <button class="saved-card__remove unsave-btn" data-job-id="{{jobId}}" title="Bỏ lưu">
                            <i class="fas fa-heart"></i>
                        </button>
                    </div>
                </div>

                <div class="saved-card__details">
                    <div class="saved-card__tag">
                        <i class="fas fa-briefcase"></i> {{type}}
                    </div>
                    <div class="saved-card__tag">
                        <i class="fas fa-map-marker-alt"></i> {{city}}
                    </div>
                    <div class="saved-card__tag saved-card__tag--salary">
                        <i class="fas fa-wallet"></i> {{salary}}
                    </div>
                </div>

                <p class="saved-card__desc">{{description}}</p>

                <div class="saved-card__footer">
                    <div class="saved-card__date">
                        <i class="fas fa-calendar-alt"></i>
                        Đã lưu ngày {{savedDate}}
                    </div>
                    <div class="saved-card__actions">
                        {{#unless isDeleted}}
                            <a href="/jobs/{{slug}}" class="saved-card__btn saved-card__btn--outline">
                                <i class="fas fa-eye"></i> Xem chi tiết
                            </a>
                            {{#unless isApplied}}
                                <a href="/jobs/apply/{{slug}}" class="saved-card__btn saved-card__btn--primary">
                                    <i class="fas fa-paper-plane"></i> Ứng tuyển ngay
                                </a>
                            {{/unless}}
                        {{else}}
                            <span class="saved-card__btn saved-card__btn--disabled">
                                <i class="fas fa-exclamation-triangle"></i> Đã bị xóa
                            </span>
                        {{/unless}}
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <!-- No results for filter -->
    <div class="saved-empty-filter" id="emptyFilter" style="display: none;">
        <i class="fas fa-filter"></i>
        <h4>Không có công việc nào</h4>
        <p>Không tìm thấy công việc phù hợp với bộ lọc này.</p>
    </div>
</div>

{{else}}
<!-- Empty State -->
<div class="container">
    <div class="saved-empty">
        <div class="saved-empty__icon">
            <i class="fas fa-heart"></i>
        </div>
        <h3 class="saved-empty__title">Bạn chưa lưu công việc nào</h3>
        <p class="saved-empty__text">Khám phá và lưu lại những công việc bạn quan tâm để xem lại sau!</p>
        <a href="/jobs/search-results" class="saved-empty__btn">
            <i class="fas fa-search"></i> Tìm kiếm công việc
        </a>
    </div>
</div>
{{/if}}

<!-- Unsave Confirmation Modal -->
<div class="saved-modal-overlay" id="unsaveModal">
    <div class="saved-modal">
        <div class="saved-modal__icon">
            <i class="fas fa-heart-broken"></i>
        </div>
        <h4 class="saved-modal__title">Bỏ lưu công việc?</h4>
        <p class="saved-modal__text">Bạn có chắc muốn xóa công việc này khỏi danh sách đã lưu?</p>
        <div class="saved-modal__actions">
            <button class="saved-modal__btn saved-modal__btn--cancel" id="modalCancel">Hủy</button>
