  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script>
    const $ = id => document.getElementById(id);
    const $$ = sel => document.querySelectorAll(sel);
    let selectedId = null;
    const deleteModal = new bootstrap.Modal($('deleteModal'));

    // Toast
    function toast(msg, type = 'success') {
      const el = document.createElement('div');
      el.className = `toast-notification ${type}`;
      el.innerHTML = `<i class="fas fa-${type === 'success' ? 'check' : 'exclamation'}-circle"></i>${msg}`;
      document.body.appendChild(el);
      setTimeout(() => el.remove(), 3000);
    }

    // Update stats
    function updateStats() {
      const rows = $$('table tbody tr:not(:has(.text-center))');
      const hired = $$('select option:checked[value="hired"]').length;
      const pending = $$('select option:checked[value="pending"]').length;
      $('totalCandidates').textContent = rows.length;
      $('approvedCandidates').textContent = hired;
      $('pendingCandidates').textContent = pending;
    }

    // Delete
    $$('.delete-btn').forEach(btn => {
      btn.onclick = () => {
        selectedId = btn.dataset.id;
        deleteModal.show();
      };
    });

    $('confirmDelete').onclick = async () => {
      try {
        const res = await fetch(`/business/jobApplied/${selectedId}`, { method: 'DELETE' });
        const data = await res.json();
        if (data.success) {
          $$(`[data-id="${selectedId}"]`)[0].closest('tr').remove();
          deleteModal.hide();
          toast('X√≥a th√†nh c√¥ng');
          updateStats();
        } else {
          toast(data.message || 'L·ªói x√≥a', 'error');
        }
      } catch (err) {
        console.error('Delete error:', err);
        toast('L·ªói k·∫øt n·ªëi', 'error');
      }
    };

    // Status change
    $$('.status-select').forEach(sel => {
      const old = sel.value;
      sel.onchange = async function() {
        this.disabled = true;
        try {
          const res = await fetch(`/business/${this.dataset.id}/update`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ status: this.value })
          });
          const data = await res.json();
          if (!data.success) throw new Error();
          toast('C·∫≠p nh·∫≠t th√†nh c√¥ng');
          updateStats();
        } catch {
          this.value = old;
          toast('L·ªói c·∫≠p nh·∫≠t', 'error');
        } finally {
          this.disabled = false;
        }
      };
    });

    // Fetch scores
    async function fetchScores() {
      const elements = $$('.matching-score');
      for (const el of elements) {
        const userId = el.dataset.userId;
        const jobId = el.dataset.jobId;
        if (!userId || !jobId) continue;

        try {
          const res = await fetch(`/business/api/applicant/${userId}/profile?jobId=${jobId}`);
          const data = await res.json();
          const score = data.data?.matchingScore;
          
          if (score) {
            const cls = score >= 70 ? 'score-high' : score >= 40 ? 'score-medium' : 'score-low';
            el.innerHTML = `<span class="score-badge ${cls} clickable-score" data-user-id="${userId}" data-job-id="${jobId}" data-bs-toggle="modal" data-bs-target="#analysisModal">${score}%</span>`;
          } else {
            el.innerHTML = '<span class="score-badge score-none">-</span>';
          }
        } catch {
          el.innerHTML = '<span class="score-badge score-none">-</span>';
        }
      }

      // Add click handlers for clickable scores
      $$('.clickable-score').forEach(scoreEl => {
        scoreEl.onclick = async function() {
          const userId = this.dataset.userId;
          const jobId = this.dataset.jobId;
          if (!userId || !jobId) return;
          
          await showDetailedAnalysis(userId, jobId);
        };
      });
    }

    // Show detailed matching analysis
    async function showDetailedAnalysis(userId, jobId) {
      const analysisContent = $('analysisContent');
      
      // Show loading state
      analysisContent.innerHTML = `
        <div class="text-center py-4">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-2">ƒêang ph√¢n t√≠ch...</p>
        </div>
      `;

      try {
        const url = `/business/api/applicant/${userId}/${jobId}/analysis`;
        
        const res = await fetch(url);
        const data = await res.json();
        
        if (data.success) {
          analysisContent.innerHTML = renderDetailedAnalysis(data.data);
        } else {
          analysisContent.innerHTML = `
            <div class="alert alert-danger">
              <i class="fas fa-exclamation-triangle me-2"></i>
              <strong>L·ªói:</strong> ${data.message || 'Kh√¥ng th·ªÉ t·∫£i ph√¢n t√≠ch'}
