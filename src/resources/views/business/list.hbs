<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách Doanh nghiệp - Job Portal</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Inter', sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
            color: #1e293b;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        /* Header Section */
        .page-header {
            text-align: center;
            margin-bottom: 4rem;
            position: relative;
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: -2rem;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            border-radius: 2px;
        }

        .page-header h1 {
            font-size: 3.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #1e293b 0%, #475569 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            letter-spacing: -0.02em;
        }

        .page-header p {
            font-size: 1.25rem;
            color: #64748b;
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.6;
        }

        /* Search Section */
        .search-section {
            background: white;
            border-radius: 24px;
            padding: 2rem;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            margin-bottom: 3rem;
            border: 1px solid rgba(226, 232, 240, 0.8);
        }

        .search-grid {
            display: grid;
            grid-template-columns: 1fr auto auto;
            gap: 1rem;
            align-items: center;
        }

        .search-input-wrapper {
            position: relative;
        }

        .search-input {
            width: 100%;
            padding: 1rem 1rem 1rem 3.5rem;
            border: 2px solid #e2e8f0;
            border-radius: 16px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #f8fafc;
        }

        .search-input:focus {
            outline: none;
            border-color: #3b82f6;
            background: white;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
        }

        .search-icon {
            position: absolute;
            left: 1.25rem;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
            font-size: 1.1rem;
            pointer-events: none;
        }

        .filter-btn, .view-toggle-btn {
            padding: 1rem 1.5rem;
            border: 2px solid #e2e8f0;
            border-radius: 16px;
            background: white;
            color: #475569;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.95rem;
        }

        .filter-btn:hover, .view-toggle-btn:hover {
            border-color: #3b82f6;
            color: #3b82f6;
            background: #f0f9ff;
        }

        .view-toggle-btn.active {
            background: #3b82f6;
            color: white;
            border-color: #3b82f6;
        }

        /* Stats Bar */
        .stats-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding: 1.5rem 2rem;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
        }

        .stats-info {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .stat-item {
            display: flex;
            flex-direction: column;
        }

        .stat-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
        }

        .stat-label {
            font-size: 0.875rem;
            color: #64748b;
            margin-top: 0.25rem;
        }

        .sort-dropdown {
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            background: white;
            color: #475569;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .sort-dropdown:focus {
            outline: none;
            border-color: #3b82f6;
        }

        /* Business Grid */
        .business-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .business-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            border: 1px solid rgba(226, 232, 240, 0.8);
        }

        .business-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
            border-color: #3b82f6;
        }

        .card-banner {
            height: 120px;
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            position: relative;
            overflow: hidden;
        }

        .card-banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
            opacity: 0.3;
        }

        .verified-ribbon {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            color: #059669;
            font-size: 0.8rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.3rem;
            box-shadow: 0 4px 12px rgba(5, 150, 105, 0.2);
        }

        .company-logo-section {
            padding: 0 2rem;
            margin-top: -2.5rem;
            position: relative;
            z-index: 10;
        }

        .company-logo {
            width: 80px;
            height: 80px;
            border-radius: 16px;
            background: white;
            padding: 0.5rem;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            border: 3px solid white;
        }

        .company-logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 8px;
        }

        .logo-placeholder {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #64748b;
            font-size: 1.5rem;
            border-radius: 8px;
        }

        .card-content {
            padding: 2rem 2rem 1.5rem;
        }

        .company-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 0.75rem;
            line-height: 1.2;
        }

        .company-description {
            color: #64748b;
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .company-meta {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #64748b;
            font-size: 0.9rem;
        }

        .meta-item i {
            color: #3b82f6;
            font-size: 0.9rem;
        }

        .company-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .stat-card {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            padding: 1rem;
            border-radius: 12px;
            text-align: center;
            border: 1px solid #e2e8f0;
        }

        .stat-card-value {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 0.25rem;
        }

        .stat-card-label {
            font-size: 0.8rem;
            color: #64748b;
            font-weight: 500;
        }

        .card-actions {
            display: flex;
            gap: 0.75rem;
        }

        .btn {
            padding: 0.875rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 0.9rem;
            flex: 1;
        }

        .btn-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.4);
        }

        .btn-secondary {
            background: #f1f5f9;
            color: #475569;
            border: 2px solid #e2e8f0;
        }

        .btn-secondary:hover {
            background: #e2e8f0;
            border-color: #cbd5e1;
        }

        /* Empty State */
        .empty-state {
            background: white;
            border-radius: 24px;
            padding: 4rem 2rem;
            text-align: center;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
            border: 2px dashed #cbd5e1;
        }

        .empty-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            font-size: 2rem;
            color: #64748b;
        }

        .empty-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .empty-description {
            color: #64748b;
            margin-bottom: 2rem;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }

        /* Pagination */
        .pagination-wrapper {
            display: flex;
            justify-content: center;
            margin-top: 3rem;
        }

        .pagination {
            display: flex;
            gap: 0.5rem;
            background: white;
            padding: 0.5rem;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .pagination-btn {
            width: 45px;
            height: 45px;
            border: none;
            background: transparent;
            color: #64748b;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .pagination-btn:hover {
            background: #f1f5f9;
            color: #3b82f6;
        }

        .pagination-btn.active {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        }

        .pagination-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .page-header h1 {
                font-size: 2.5rem;
            }

            .search-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .business-grid {
                grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            }

            .stats-bar {
                flex-direction: column;
                gap: 1rem;
                align-items: stretch;
            }

            .stats-info {
                justify-content: space-around;
            }
        }

        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .page-header h1 {
                font-size: 2rem;
            }

            .page-header p {
                font-size: 1.1rem;
            }

            .search-section {
                padding: 1.5rem;
            }

            .business-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }

            .stats-info {
                flex-direction: column;
                gap: 1rem;
                align-items: center;
            }

            .card-content {
                padding: 1.5rem;
            }

            .company-stats {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 480px) {
            .page-header h1 {
                font-size: 1.75rem;
            }

            .search-grid {
                grid-template-columns: 1fr;
            }

            .filter-btn, .view-toggle-btn {
                width: 100%;
                justify-content: center;
            }

            .card-actions {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="page-header">
            <h1>Khám phá Doanh nghiệp</h1>
            <p>Tìm kiếm cơ hội việc làm tại các công ty hàng đầu Việt Nam</p>
        </div>

        <!-- Search Section -->
        <div class="search-section">
            <div class="search-grid">
                <div class="search-input-wrapper">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="search-input" placeholder="Tìm kiếm công ty, vị trí, ngành nghề..." id="searchInput">
                </div>
                <button class="filter-btn">
                    <i class="fas fa-filter"></i>
                    Bộ lọc
                </button>
                <button class="view-toggle-btn active" id="gridViewBtn">
                    <i class="fas fa-th"></i>
                    Lưới
                </button>
            </div>
        </div>

        <!-- Stats Bar -->
        <div class="stats-bar">
            <div class="stats-info">
                <div class="stat-item">
                    <div class="stat-value">{{list.length}}</div>
                    <div class="stat-label">Doanh nghiệp</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">{{totalBusinesses}}</div>
                    <div class="stat-label">Tổng số</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">{{activeBusinesses}}</div>
                    <div class="stat-label">Đang tuyển</div>
                </div>
            </div>
            <select class="sort-dropdown" id="sortDropdown">
                <option value="newest">Mới nhất</option>
                <option value="name">Tên A-Z</option>
                <option value="jobs">Nhiều việc nhất</option>
            </select>
        </div>

        <!-- Business Listings -->
        {{#if list.length}}
            <div class="business-grid" id="businessList">
                {{#each list}}
                    <div class="business-card">
                        <div class="card-banner">
                            {{#if verified}}
                                <div class="verified-ribbon">
                                    <i class="fas fa-check-circle"></i>
                                    Đã xác thực
                                </div>
                            {{/if}}
                        </div>
                        <div class="company-logo-section">
                            <div class="company-logo">
                                {{#if logoUrl}}
                                    <img src="{{logoUrl}}" alt="{{name}}">
                                {{else}}
                                    <div class="logo-placeholder">
                                        <i class="fas fa-building"></i>
                                    </div>
                                {{/if}}
                            </div>
                        </div>
                        <div class="card-content">
                            <h3 class="company-name">{{name}}</h3>
                            <p class="company-description">{{description}}</p>
                            <div class="company-meta">
                                <div class="meta-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>{{location}}</span>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-industry"></i>
                                    <span>{{industry}}</span>
                                </div>
                            </div>
                            <div class="company-stats">
                                <div class="stat-card">
                                    <div class="stat-card-value">{{jobCount}}</div>
                                    <div class="stat-card-label">Việc làm</div>
                                </div>
                                <div class="stat-card">
                                    <div class="stat-card-value">{{employeeCount}}</div>
                                    <div class="stat-card-label">Nhân viên</div>
                                </div>
                            </div>
                            <div class="card-actions">
                                <a href="/business/detail/{{id}}" class="btn btn-primary">
                                    <i class="fas fa-eye"></i>
                                    Xem chi tiết
                                </a>
                                <a href="/businesses/{{id}}/jobs" class="btn btn-secondary">
                                    <i class="fas fa-briefcase"></i>
                                    Việc làm
                                </a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-building"></i>
                </div>
                <h3 class="empty-title">Chưa có doanh nghiệp nào</h3>
                <p class="empty-description">Hiện tại chưa có doanh nghiệp nào được đăng ký trên hệ thống. Vui lòng quay lại sau.</p>
                {{#unless user}}
                    <a href="/auth/register" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Đăng ký doanh nghiệp
                    </a>
                {{/unless}}
            </div>
        {{/if}}

        <!-- Pagination -->
        {{#if list.length}}
            <div class="pagination-wrapper">
                <div class="pagination">
                    <button class="pagination-btn" disabled>
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="pagination-btn active">1</button>
                    <button class="pagination-btn">2</button>
                    <button class="pagination-btn">3</button>
                    <button class="pagination-btn">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        {{/if}}
    </div>

    <script>
        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const businessCards = document.querySelectorAll('.business-card');
        const sortDropdown = document.getElementById('sortDropdown');
        const gridViewBtn = document.getElementById('gridViewBtn');

        function filterBusinesses() {
            const searchTerm = searchInput.value.toLowerCase();

            businessCards.forEach(card => {
                const companyName = card.querySelector('.company-name').textContent.toLowerCase();
                const description = card.querySelector('.company-description').textContent.toLowerCase();
                const location = card.querySelector('.meta-item span').textContent.toLowerCase();

                const matchesSearch = companyName.includes(searchTerm) || 
                                  description.includes(searchTerm) || 
                                  location.includes(searchTerm);

                if (matchesSearch) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        function sortBusinesses() {
            const sortValue = sortDropdown.value;
            const businessList = document.getElementById('businessList');
            const cards = Array.from(businessList.children);

            cards.sort((a, b) => {
                switch(sortValue) {
                    case 'name':
                        const nameA = a.querySelector('.company-name').textContent;
                        const nameB = b.querySelector('.company-name').textContent;
                        return nameA.localeCompare(nameB);
                    case 'jobs':
                        const jobsA = parseInt(a.querySelector('.stat-card-value').textContent);
                        const jobsB = parseInt(b.querySelectorAll('.stat-card-value')[0].textContent);
                        return jobsB - jobsA;
                    default:
                        return 0;
                }
            });

            cards.forEach(card => businessList.appendChild(card));
        }

        // Event listeners
        searchInput.addEventListener('input', filterBusinesses);
        sortDropdown.addEventListener('change', sortBusinesses);

        // View toggle (placeholder for future implementation)
        gridViewBtn.addEventListener('click', function() {
            this.classList.toggle('active');
            // Future: Implement list view
        });
    </script>
</body>
</html>