<div class="main-content">
    <div class="content-wrapper">
<!-- Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-building me-2"></i>
                Hồ sơ công ty
            </h1>
            <p class="text-muted mb-0">Quản lý thông tin công ty của bạn</p>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editProfileModal">
            <i class="fas fa-edit me-2"></i>
            Chỉnh sửa hồ sơ
        </button>
    </div>
</div>

<!-- Success/Error Messages -->
{{#if success}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="fas fa-check-circle me-2"></i>
    {{success}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

{{#if errors}}
{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fas fa-exclamation-circle me-2"></i>
    {{this}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/each}}
{{/if}}

<!-- Profile Content -->
<div class="row">
    <!-- CV Upload Section -->
    <div class="col-12 mb-4">
        <!-- Debug: Business data check -->
        {{#if business}}
        <div class="alert alert-info" style="margin-bottom: 10px;">
            <small>Debug: Business found - {{business.companyName}} | CV Path: {{business.cvPath}}</small>
        </div>
        {{else}}
        <div class="alert alert-warning" style="margin-bottom: 10px;">
            <small>Debug: No business data found</small>
        </div>
        {{/if}}
        
        <div class="card shadow-sm border-primary">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-file-pdf me-2"></i>
                    CV Management
                </h5>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="cv-info">
                            {{#if business.cvPath}}
                            <div class="cv-item d-flex align-items-center">
                                <i class="fas fa-file-pdf text-danger me-3" style="font-size: 1.5rem;"></i>
                                <div>
                                    <div class="cv-filename fw-bold">{{business.cvFilename || 'CV Document'}}</div>
                                    <small class="text-muted">Uploaded: {{business.cvUploadedAt}}</small>
                                </div>
                            </div>
                            {{else}}
                            <div class="cv-placeholder text-muted d-flex align-items-center">
                                <i class="fas fa-upload me-3" style="font-size: 1.5rem;"></i>
                                <div>
                                    <div class="fw-bold">No CV uploaded yet</div>
                                    <small>Upload your CV to enhance your business profile</small>
                                </div>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        {{#if business.cvPath}}
                        <button class="btn btn-outline-primary btn-sm me-2" id="viewCVBtn">
                            <i class="fas fa-eye me-1"></i>
                            View CV
                        </button>
                        <button class="btn btn-outline-danger btn-sm" id="deleteCVBtn">
                            <i class="fas fa-trash me-1"></i>
                            Delete
                        </button>
                        {{else}}
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#cvUploadModal">
                            <i class="fas fa-upload me-1"></i>
                            Upload CV
                        </button>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Company Info Card -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center mb-4">
                    <div class="company-logo-container me-3">
                        <div class="logo-wrapper" id="logoClickArea">
                            {{#if business.logoPath}}
                            <img src="{{business.logoPath}}" alt="{{business.companyName}}" class="company-logo" onerror="this.onerror=null; this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="company-logo-placeholder" style="display: none;">
                                <i class="fas fa-building"></i>
                            </div>
                            {{else}}
                            <div class="company-logo-placeholder">
                                <i class="fas fa-building"></i>
                            </div>
                            {{/if}}
                            <div class="logo-overlay">
                                <i class="fas fa-camera"></i>
                                <span>Thay đổi logo</span>
                            </div>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h4 class="mb-1">{{business.companyName}}</h4>
                        <p class="text-muted mb-2">{{business.industry}}</p>
                        <div class="company-actions">
                            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#logoModal">
                                <i class="fas fa-camera me-1"></i>
                                {{#if business.logoPath}}Thay đổi logo{{else}}Thêm logo{{/if}}
                            </button>
                            {{#if business.logoPath}}
                            <button class="btn btn-sm btn-outline-danger" id="deleteLogoBtn">
                                <i class="fas fa-trash me-1"></i>
                                Xóa logo
                            </button>
                            {{/if}}
                        </div>
                    </div>
                </div>

                <div class="row company-info">
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="info-label">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <p class="info-value">{{business.email}}</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="info-label">
                                <i class="fas fa-phone me-2"></i>Điện thoại
                            </label>
                            <p class="info-value">{{business.phone}}</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="info-label">
                                <i class="fas fa-globe me-2"></i>Website
                            </label>
                            <p class="info-value">
                                {{#if business.website}}
                                <a href="{{business.website}}" target="_blank">{{business.website}}</a>
                                {{else}}
                                <span class="text-muted">Chưa cập nhật</span>
                                {{/if}}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="info-label">
                                <i class="fas fa-users me-2"></i>Quy mô công ty
                            </label>
                            <p class="info-value">{{business.companySize}}</p>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="info-item">
                            <label class="info-label">
                                <i class="fas fa-map-marker-alt me-2"></i>Địa chỉ
                            </label>
                            <p class="info-value">
                                {{#if business.address}}
                                {{business.address.street}}, {{business.address.city}}, {{business.address.country}}
                                {{else}}
                                <span class="text-muted">Chưa cập nhật</span>
                                {{/if}}
                            </p>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="info-item">
                            <label class="info-label">
                                <i class="fas fa-info-circle me-2"></i>Mô tả công ty
                            </label>
                            <p class="info-value">{{business.description}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Card -->
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-4">
                    <i class="fas fa-chart-bar me-2"></i>
                    Thống kê
                </h5>
                <div class="stat-item">
                    <div class="stat-icon bg-primary">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <div class="stat-content">
                        <h6 class="stat-title">Tổng số tin tuyển dụng</h6>
                        <p class="stat-number">{{stats.totalJobs}}</p>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon bg-success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-content">
                        <h6 class="stat-title">Tin đang hoạt động</h6>
                        <p class="stat-number">{{stats.activeJobs}}</p>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <a href="/business/jobs" class="btn btn-outline-primary">
                        <i class="fas fa-list me-2"></i>
                        Quản lý tin tuyển dụng
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-edit me-2"></i>
                    Chỉnh sửa hồ sơ công ty
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/business/profile/edit" method="POST">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Tên công ty *</label>
                                <input type="text" class="form-control" name="companyName" value="{{business.companyName}}" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Điện thoại</label>
                                <input type="tel" class="form-control" name="phone" value="{{business.phone}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Website</label>
                                <input type="url" class="form-control" name="website" value="{{business.website}}" placeholder="https://example.com">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Ngành nghề</label>
                                <input type="text" class="form-control" name="industry" value="{{business.industry}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Quy mô công ty</label>
                                <select class="form-select" name="companySize">
                                    <option value="">Chọn quy mô</option>
                                    <option value="1-10" {{#if (eq business.companySize "1-10")}}selected{{/if}}>1-10 nhân viên</option>
                                    <option value="11-50" {{#if (eq business.companySize "11-50")}}selected{{/if}}>11-50 nhân viên</option>
                                    <option value="51-200" {{#if (eq business.companySize "51-200")}}selected{{/if}}>51-200 nhân viên</option>
                                    <option value="201-500" {{#if (eq business.companySize "201-500")}}selected{{/if}}>201-500 nhân viên</option>
                                    <option value="500+" {{#if (eq business.companySize "500+")}}selected{{/if}}>500+ nhân viên</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Năm thành lập</label>
                                <input type="number" class="form-control" name="foundedYear" value="{{business.foundedYear}}" min="1900" max="{{currentYear}}">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label">Địa chỉ</label>
                                <input type="text" class="form-control" name="address[street]" value="{{business.address.street}}" placeholder="Địa chỉ cụ thể">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Thành phố</label>
                                <input type="text" class="form-control" name="address[city]" value="{{business.address.city}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Quốc gia</label>
                                <input type="text" class="form-control" name="address[country]" value="{{business.address.country}}">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label">Mô tả công ty</label>
                                <textarea class="form-control" name="description" rows="4">{{business.description}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>
                        Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- CV Upload Modal -->
<div class="modal fade" id="cvUploadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-file-pdf me-2"></i>
                    Upload CV
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="cvUploadForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Select CV File</label>
                        <input type="file" class="form-control" name="file" accept=".pdf,.doc,.docx" required>
                        <div class="form-text">Accepted formats: PDF, DOC, DOCX. Maximum file size: 5MB.</div>
                    </div>
                    <div class="cv-upload-preview" id="cvUploadPreview" style="display: none;">
                        <div class="alert alert-info">
                            <i class="fas fa-file-pdf me-2"></i>
                            <span id="cvFileName"></span>
                            <span class="text-muted ms-2" id="cvFileSize"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="uploadCVBtn">
                        <i class="fas fa-upload me-2"></i>
                        Upload CV
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- CV View Modal -->
<div class="modal fade" id="cvViewModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-eye me-2"></i>
                    View CV
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="cv-viewer-container">
                    <iframe id="cvViewer" style="width: 100%; height: 600px; border: none;"></iframe>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" id="downloadCVLink" class="btn btn-primary" download>
                    <i class="fas fa-download me-2"></i>
                    Download CV
                </a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Logo Upload Modal -->
<div class="modal fade" id="logoModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-camera me-2"></i>
                    {{#if business.logoPath}}Thay đổi logo{{else}}Thêm logo{{/if}}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="logoUploadForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="text-center mb-3">
                        <div class="logo-upload-preview">
                            <img src="{{#if business.logoPath}}{{business.logoPath}}{{else}}/images/default-company-logo.png{{/if}}" 
                                 id="logoPreview" 
                                 alt="Logo Preview" 
                                 class="img-fluid rounded"
                                 style="max-width: 200px; max-height: 200px; border: 2px solid #e9ecef;">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Chọn file logo</label>
                        <input type="file" class="form-control" name="logo" accept="image/*" id="logoInput">
                        <div class="form-text">Chấp nhận các định dạng: JPG, PNG, GIF, WebP. Tối đa 2MB.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary" id="uploadLogoBtn">
                        <i class="fas fa-upload me-2"></i>
                        Tải lên
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

