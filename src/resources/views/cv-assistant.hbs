            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Helper function to convert MongoDB/JSON objects to displayable text
        function mongoToObject(obj) {
            console.log('mongoToObject input:', obj, 'type:', typeof obj);
            
            if (typeof obj === 'string') {
                return obj;
            }
            if (typeof obj === 'object' && obj !== null) {
                // Check if it's the nested improvements structure
                if (obj.improvements && typeof obj.improvements === 'string') {
                    console.log('Found nested improvements:', obj.improvements);
                    return obj.improvements;
                }
                // For other objects, convert to formatted JSON
                console.log('Converting object to JSON');
                return JSON.stringify(obj, null, 2);
            }
            return String(obj);
        }
        
        // Base URLs for services
        const AI_BASE_URL = '/ai-service';  // For upload and basic operations
        const AI_DIRECT_URL = 'http://localhost:8000';  // For direct AI operations
        
        // Show result in container
        function showResult(containerId, content, isSuccess = true) {
            const container = document.getElementById(containerId);
            container.innerHTML = content;
            container.className = `result-container show ${isSuccess ? 'border-success' : 'border-danger'}`;
        }
        
        // Show loading state
        function showLoading(containerId) {
            const container = document.getElementById(containerId);
            container.innerHTML = '<div class="text-center"><div class="loading"></div> Processing...</div>';
            container.className = 'result-container show';
        }
        
        // CV Analysis Functions
        function analyzeCV() {
            const username = document.getElementById('cvAnalysisUsername').value;
            if (!username) {
                alert('Please enter your username');
                return;
            }
            
            showLoading('cvAnalysisResult');
            
            fetch(`${AI_BASE_URL}/resume/${username}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.error) {
                        throw new Error(data.error);
                    }
                    
                    const resultHtml = `
                        <div class="d-flex align-items-center mb-3">
                            <span class="status-indicator status-success"></span>
                            <h5 class="mb-0">CV Found Successfully</h5>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Username:</strong> ${data.username || username}</p>
                                <p><strong>Uploaded:</strong> ${data.uploaded_at ? new Date(data.uploaded_at).toLocaleDateString() : 'Unknown'}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>File Size:</strong> ${data.file_size ? (data.file_size / 1024).toFixed(1) + ' KB' : 'Unknown'}</p>
                                <p><strong>Processed:</strong> ${data.processed_text ? 'Yes' : 'No'}</p>
                            </div>
                        </div>
                        
                        ${data.parsed_output ? `
                        <div class="mt-4">
                            <h6 class="text-primary mb-3"><i class="fas fa-chart-line me-2"></i>Extracted Information</h6>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title text-success"><i class="fas fa-code me-1"></i>Skills</h6>
                                            <div class="skill-tags">
                                                ${(data.parsed_output.technical_skills || []).map(skill => 
                                                    typeof skill === 'string' ? 
                                                    `<span class="badge bg-light text-dark me-1 mb-1">${skill}</span>` :
                                                    `<span class="badge bg-light text-dark me-1 mb-1">${skill.name || skill}</span>`
                                                ).join('') || '<p class="text-muted small">No skills detected</p>'}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title text-info"><i class="fas fa-briefcase me-1"></i>Job Titles</h6>
                                            <div>
                                                ${(data.parsed_output.job_titles || []).map(title => 
                                                    `<span class="badge bg-info me-1 mb-1">${title}</span>`
                                                ).join('') || '<p class="text-muted small">No job titles detected</p>'}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title text-warning"><i class="fas fa-industry me-1"></i>Industries</h6>
                                            <div>
                                                ${(data.parsed_output.industries || []).map(industry => 
                                                    `<span class="badge bg-warning text-dark me-1 mb-1">${industry}</span>`
                                                ).join('') || '<p class="text-muted small">No industries detected</p>'}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            ${data.parsed_output.experience_str ? `
                            <div class="mt-3">
                                <div class="alert alert-info">
                                    <i class="fas fa-clock me-2"></i>
                                    <strong>Experience:</strong> ${data.parsed_output.experience_str} 
                                    <span class="badge bg-secondary ms-2">${data.parsed_output.level || 'Unknown'}</span>
                                </div>
                            </div>
                            ` : ''}
                        </div>
                        ` : ''}
                        
                        <div class="mt-3">
                            <button class="btn btn-sm btn-outline-primary" onclick="getCVImprovements()">
                                <i class="fas fa-lightbulb me-1"></i>Get Detailed Analysis
                            </button>
                        </div>
                    `;
                    showResult('cvAnalysisResult', resultHtml, true);
                })
                .catch(error => {
                    showResult('cvAnalysisResult', `
                        <div class="d-flex align-items-center mb-2">
                            <span class="status-indicator status-error"></span>
                            <h5 class="mb-0">CV Not Found</h5>
                        </div>
                        <p class="text-muted">${error.message}</p>
                        <p class="small">Please upload your CV first using the upload area above.</p>
                    `, false);
                });
        }
        
        function getCVImprovements() {
            const username = document.getElementById('cvAnalysisUsername').value;
            if (!username) {
                alert('Please enter your username');
                return;
            }
            
            showLoading('cvAnalysisResult');
            
            // Direct call to backend AI service with proper headers
            fetch(`${AI_DIRECT_URL}/resume/${username}/suggest_improvements`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                console.log('CV Analysis Response:', data); // Debug log
                
                if (data.error) {
                    throw new Error(data.error);
                }
                
                // Parse the improvements text and display it
                let improvementsText = 'No improvements available';
                
                console.log('Full data structure:', data);
                console.log('data.improvements:', data.improvements);
                console.log('typeof data.improvements:', typeof data.improvements);
                
                // Use mongoToObject helper to properly convert the data
                if (data.improvements) {
                    improvementsText = mongoToObject(data.improvements);
                    console.log('After mongoToObject:', improvementsText);
                }
                
                console.log('Final improvements text:', improvementsText); // Debug log
                const resultHtml = `
                    <div class="d-flex align-items-center mb-3">
                        <span class="status-indicator status-success"></span>
                        <h5 class="mb-0">CV Analysis Complete</h5>
                    </div>
                    <div class="alert alert-info">
                        <h6><i class="fas fa-robot me-2"></i>AI Analysis Results</h6>
                        <div style="white-space: pre-line;">${improvementsText}</div>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Analysis powered by ${data.model || 'qwen2.5:3b'} model
                        </small>
                    </div>
                `;
                showResult('cvAnalysisResult', resultHtml, true);
            })
            .catch(error => {
                showResult('cvAnalysisResult', `
                    <div class="d-flex align-items-center mb-2">
                        <span class="status-indicator status-error"></span>
                        <h5 class="mb-0">Analysis Failed</h5>
                    </div>
                    <p class="text-muted">${error.message}</p>
                    <p class="small text-muted">Make sure the AI backend service is running on port 8000.</p>
                `, false);
            });
        }
        
        // Job Recommendations Functions
        function getJobRecommendations() {
            const username = document.getElementById('jobUsername').value;
            if (!username) {
                alert('Please enter your username');
                return;
            }
            
            showLoading('jobRecommendationsResult');
            
            // Direct call to backend AI service with proper headers
            fetch(`${AI_DIRECT_URL}/api/jobs-suggestion/${username}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Job suggestions response:', data); // Debug log
                    
                    if (data.error) {
                        throw new Error(data.error);
                    }
                    
                    const jobs = data.matching_jobs || data.jobs || data.recommendations || data.results || [];
                    console.log('Extracted jobs:', jobs); // Debug log
                    
                    // Limit to 10 jobs as requested
                    const displayJobs = jobs.slice(0, 10);
                    
                    const resultHtml = `
                        <div class="d-flex align-items-center mb-3">
                            <span class="status-indicator status-success"></span>
                            <h5 class="mb-0">Found ${data.total_matches || jobs.length} Job Matches</h5>
                            ${jobs.length > 10 ? `<small class="text-muted ms-2">(Showing top 10)</small>` : ''}
                        </div>
                        
                        ${displayJobs.length > 0 ? `
                        <div class="job-list">
                            ${displayJobs.map((job, index) => {
                                // Handle different title formats - some include match percentage in title
                                const displayTitle = job.title || job.position || 'Job Title';
                                const company = job.company || 'Company';
                                const matchPercentage = job.match_percentage || 0;
                                const location = job.location || 'Location';
                                const jobType = job.type || 'Full-time';
                                const salary = job.salary || '';
                                const relevance = job.relevance || 'medium';
                                
                                // Enhanced percentage display with color coding
                                let matchBadgeClass = 'bg-secondary';
                                let matchIcon = '';
                                
                                if (matchPercentage >= 80) {
                                    matchBadgeClass = 'bg-success';
                                    matchIcon = '<i class="fas fa-star me-1"></i>';
                                } else if (matchPercentage >= 60) {
                                    matchBadgeClass = 'bg-info';
                                    matchIcon = '<i class="fas fa-thumbs-up me-1"></i>';
                                } else if (matchPercentage >= 40) {
                                    matchBadgeClass = 'bg-warning text-dark';
                                    matchIcon = '<i class="fas fa-minus me-1"></i>';
                                } else {
                                    matchBadgeClass = 'bg-danger';
                                    matchIcon = '<i class="fas fa-times me-1"></i>';
                                }
                                
                                return `
                            <a href="/jobs/${job.slug}" 
                               class="card mb-3 job-card ${index === 0 ? 'border-success' : ''} clickable-job-card text-decoration-none text-dark">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div class="flex-grow-1">
                                            ${index === 0 ? '<span class="badge bg-success me-2">Best Match</span>' : ''}
                                            <h6 class="card-title mb-0 d-inline">${displayTitle}</h6>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge ${matchBadgeClass} fs-6">${matchIcon}${matchPercentage}% Match</span>
                                            <div class="small text-muted mt-1">${relevance} relevance</div>
                                        </div>
                                    </div>
                                    <p class="card-text mb-2">
                                        <strong>${company}</strong><br>
                                        <small class="text-muted">
                                            <i class="fas fa-map-marker-alt me-1"></i>${location} â€¢ 
                                            <i class="fas fa-clock me-1"></i>${jobType}
                                        </small>
                                    </p>
                                    ${salary ? `<p class="card-text small mb-2"><strong>Salary:</strong> ${salary}</p>` : ''}
                                    
                                    <!-- Progress bar for visual match percentage -->
                                    <div class="progress mt-2" style="height: 6px;">
                                        <div class="progress-bar ${matchPercentage >= 80 ? 'bg-success' : matchPercentage >= 60 ? 'bg-info' : matchPercentage >= 40 ? 'bg-warning' : 'bg-danger'}" 
                                             role="progressbar" 
                                             style="width: ${matchPercentage}%" 
                                             aria-valuenow="${matchPercentage}" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                    
                                    <!-- Click indicator -->
                                    <div class="text-end mt-2">
                                        <small class="text-primary">
                                            <i class="fas fa-arrow-right me-1"></i>View Details
                                        </small>
                                    </div>
                                </div>
                            </a>
                                `;}).join('')}
                        </div>
                        
                        ${jobs.length > 10 ? `
                        <div class="text-center mt-3">
                            <button class="btn btn-sm btn-outline-primary" onclick="alert('Showing top 10 out of ' + ${jobs.length} + ' total jobs. More jobs available in the system.')">
                                <i class="fas fa-info-circle me-1"></i>View All ${jobs.length} Jobs
                            </button>
                        </div>
                        ` : ''}
                        ` : '<p class="text-muted">No job matches found. Try uploading your CV first.</p>'}
                    `;
                    showResult('jobRecommendationsResult', resultHtml, true);
                })
                .catch(error => {
                    showResult('jobRecommendationsResult', `
                        <div class="d-flex align-items-center mb-2">
                            <span class="status-indicator status-error"></span>
                            <h5 class="mb-0">Job Search Failed</h5>
                        </div>
                        <p class="text-muted">${error.message}</p>
                        <p class="small text-muted">Make sure the AI backend service is running on port 8000.</p>
                    `, false);
                });
        }
        
        function scrapeNewJobs() {
            const username = document.getElementById('jobUsername').value;
            if (!username) {
                alert('Please enter your username');
                return;
            }
            
            showLoading('jobRecommendationsResult');
            
            fetch(`${AI_BASE_URL}/users/${username}/jobs`)
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        throw new Error(data.error);
                    }
                    
                    const resultHtml = `
                        <div class="d-flex align-items-center mb-3">
                            <span class="status-indicator status-success"></span>
                            <h5 class="mb-0">Job Listings Updated</h5>
                        </div>
                        <p class="text-muted">Found ${data.count || 0} new job opportunities.</p>
                        <button class="btn btn-sm btn-outline-primary" onclick="getJobRecommendations()">
                            <i class="fas fa-search me-1"></i>View Updated Jobs
                        </button>
                    `;
                    showResult('jobRecommendationsResult', resultHtml, true);
                })
                .catch(error => {
                    showResult('jobRecommendationsResult', `
                        <div class="d-flex align-items-center mb-2">
                            <span class="status-indicator status-error"></span>
                            <h5 class="mb-0">Job Update Failed</h5>
                        </div>
                        <p class="text-muted">${error.message}</p>
                    `, false);
                });
        }
        
        // File Upload Handling
        document.addEventListener('DOMContentLoaded', function() {
            const uploadArea = document.getElementById('cvUploadArea');
            const fileInput = document.getElementById('cvFileInput');
            
            // Auto-fill username if user is logged in
            {{#if user}}
                const cvUsernameInput = document.getElementById('cvAnalysisUsername');
                const jobUsernameInput = document.getElementById('jobUsername');
                
                if (cvUsernameInput) {
                    cvUsernameInput.value = '{{#if user.username}}{{user.username}}{{else}}{{user.name}}{{/if}}';
                    cvUsernameInput.readOnly = true;
                    cvUsernameInput.classList.add('bg-light');
                }
                
                if (jobUsernameInput) {
                    jobUsernameInput.value = '{{#if user.username}}{{user.username}}{{else}}{{user.name}}{{/if}}';
                    jobUsernameInput.readOnly = true;
                    jobUsernameInput.classList.add('bg-light');
                }
                
                // Display existing CV data if available
                {{#if userCVData}}
                    const cvAnalysisResult = document.getElementById('cvAnalysisResult');
                    if (cvAnalysisResult) {
                        const username = '{{userCVData.username}}';
                        const uploadedAt = '{{#if userCVData.uploaded_at}}{{userCVData.uploaded_at}}{{else}}Unknown{{/if}}';
                        const fileSize = '{{#if userCVData.file_size}}{{userCVData.file_size}}{{else}}Unknown{{/if}}';
                        const processedText = {{#if userCVData.processed_text}}true{{else}}false{{/if}};
                        
                        const resultHtml = `
                            <div class="d-flex align-items-center mb-3">
                                <span class="status-indicator status-success"></span>
                                <h5 class="mb-0">Your CV is Ready</h5>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Username:</strong> ${username}</p>
                                    <p><strong>Uploaded:</strong> ${uploadedAt}</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>File Size:</strong> ${fileSize} KB</p>
                                    <p><strong>Processed:</strong> ${processedText ? 'Yes' : 'No'}</p>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-sm btn-outline-primary" onclick="getCVImprovements()">
                                    <i class="fas fa-lightbulb me-1"></i>Get Detailed Analysis
                                </button>
                                <button class="btn btn-sm btn-outline-secondary ms-2" onclick="analyzeCV()">
                                    <i class="fas fa-search me-1"></i>View CV Details
                                </button>
                            </div>
                        `;
                        cvAnalysisResult.innerHTML = resultHtml;
                        cvAnalysisResult.className = 'result-container show border-success';
                    }
                {{/if}}
            {{/if}}
            
            if (uploadArea && fileInput) {
                uploadArea.addEventListener('click', () => fileInput.click());
                
                uploadArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadArea.classList.add('dragover');
                });
                
                uploadArea.addEventListener('dragleave', () => {
                    uploadArea.classList.remove('dragover');
                });
                
                uploadArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    uploadArea.classList.remove('dragover');
                    handleFileUpload(e.dataTransfer.files[0]);
                });
                
                fileInput.addEventListener('change', (e) => {
                    handleFileUpload(e.target.files[0]);
                });
            }
        });
        
        function handleFileUpload(file) {
            if (!file || !(file instanceof File)) {
                alert('Please select a valid file');
                return;
            }
            
            const username = document.getElementById('cvAnalysisUsername').value;
            if (!username) {
                alert('Please enter your username first');
                return;
            }
            
            showLoading('cvAnalysisResult');
            
            const formData = new FormData();
            formData.append('file', file);
            formData.append('username', username);
            
            fetch(`${AI_BASE_URL}/upload_resume`, {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                if (data.error) {
                    throw new Error(data.error);
                }
                
                const resultHtml = `
                    <div class="d-flex align-items-center mb-3">
                        <span class="status-indicator status-success"></span>
                        <h5 class="mb-0">CV Uploaded Successfully</h5>
                    </div>
                    <p><strong>File:</strong> ${data.filename || file.name}</p>
                    <p><strong>Size:</strong> ${data.size ? (data.size / 1024).toFixed(1) + ' KB' : 'Unknown'}</p>
                    <p class="text-muted">Your CV is now ready for analysis!</p>
                    <button class="btn btn-sm btn-outline-primary" onclick="analyzeCV()">
                        <i class="fas fa-search me-1"></i>Analyze My CV
                    </button>
                `;
                showResult('cvAnalysisResult', resultHtml, true);
            })
            .catch(error => {
                showResult('cvAnalysisResult', `
                    <div class="d-flex align-items-center mb-2">
                        <span class="status-indicator status-error"></span>
                        <h5 class="mb-0">Upload Failed</h5>
                    </div>
                    <p class="text-muted">${error.message}</p>
                `, false);
            });
        }
    </script>
</body>
</html>