                            </div>
                            <small class="text-muted">Username auto-filled from your profile</small>
                        {{else}}
                            <input type="text" id="cvAnalysisUsername" class="form-control" placeholder="Enter your username">
                            <small class="text-muted">Please <a href="/auth/loginRIX">login</a> for auto-fill</small>
                        {{/if}}
                    </div>
                    
                    <div class="mb-4">
                        <div class="upload-area" id="cvUploadArea">
                            <i class="fas fa-cloud-upload-alt fa-3x text-primary mb-3"></i>
                            <h5>Upload Your CV</h5>
                            <p class="text-muted">Drag & drop or click to browse</p>
                            <p class="text-muted small">Supported: PDF, DOC, DOCX, TXT</p>
                            <input type="file" id="cvFileInput" accept=".pdf,.doc,.docx,.txt" style="display: none;">
