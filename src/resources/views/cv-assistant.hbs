                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <div>
                        <strong>Please log in to use CV Assistant</strong>
                        <br><small class="text-muted">Login to access personalized CV analysis and job recommendations.</small>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {{/if}}

        <!-- Service Grid -->
        <div class="feature-grid">
            <!-- CV Analysis Service -->
            <div class="service-card">
                <div class="service-header">
                    <div class="service-icon">
                        <i class="fas fa-file-medical"></i>
                    </div>
                    <h3 class="service-title">CV Analysis</h3>
                    <p class="service-description">Get detailed feedback and improvement suggestions for your CV</p>
                </div>
                <div class="service-body">
                    <div class="mb-4">
                        <label class="form-label fw-bold">Your Username</label>
                        {{#if user}}
                            <div class="input-group">
                                <input type="text" id="cvAnalysisUsername" class="form-control" placeholder="{{#if user.username}}{{user.username}}{{else}}{{user.name}}{{/if}} (auto-filled)" readonly>
