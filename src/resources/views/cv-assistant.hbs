    <div class="container">
        <!-- User Session Info -->
        {{#if isLogin}}
            <div class="alert alert-info alert-dismissible fade show mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-user-check me-2"></i>
                    <div>
                        <strong>Welcome back, {{#if user.name}}{{user.name}}{{else}}{{user.username}}{{/if}}!</strong>
                        {{#if userCVData}}
                            <br><small class="text-muted">We found your CV file: {{#if userCVData.filename}}{{userCVData.filename}}{{else}}Uploaded CV{{/if}} ({{#if userCVData.file_size}}{{userCVData.file_size}}KB{{/if}})</small>
